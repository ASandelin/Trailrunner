pipeline {
    agent any

    parameters {
        string(name: 'main', defaultValue: 'master', description: 'Main branch')
        string(name: 'b1', defaultValue: 'develop', description: 'Branch b1')
    }
    triggers {
        pollSCM('H * * * *') 
    }
    stages {
        stage('Build') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn compile'
                }
            }
        }        
        stage('Test') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn test'
                }
            }
        }
        stage('Run Robot') {
            steps {
                dir('Selenium') {
                    bat 'robot InfotivCarRental\\infotivCarRental.robot'
                }
            }
        }        
        stage('Post Test') {
            steps {
            	dir('Trailrunner') {
            	   junit '**/target/surefire-reports/*.xml' // Collect JUnit test results
                	   jacoco(execPattern: '**/target/jacoco.exec') // Collect JaCoCo code coverage report
                	}
                dir('Selenium') {
                   archiveArtifacts(artifacts: 'log/output.xml, log/log.html, log/report.html', allowEmptyArchive: true)            
                }
        	 }
        }
    }
}
