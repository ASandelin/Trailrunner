pipeline {
    agent any

    parameters {
        string(name: 'main', defaultValue: 'master', description: 'Main branch')
        string(name: 'b1', defaultValue: 'develop', description: 'Branch b1')
    }
    triggers {
        pollSCM('H * * * *') 
    }
    stages {
        stage('Build') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn compile'
                }
            }
        }        
        stage('Test') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn test'
                }
            }
        }
        stage('Post Test') {
            steps {
            	echo 'Post Test stage executed'
                }
        }
        stage('Run Robot') {
            steps {
                echo 'Run Robot stage executed'
                }
        }
    }
}
