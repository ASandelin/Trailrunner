pipeline {
    agent any

    parameters {
        string(name: 'main', defaultValue: 'master', description: 'Main branch')
        string(name: 'b1', defaultValue: 'develop', description: 'Branch b1')
    }
    triggers {
        pollSCM('H * * * *') 
    }
    stages {
        stage('Checkout') {
            steps {
            	script {
            		// Checkout the branch specified by the 'b1' parameter																																																																																																																																	
            		checkout([$class: 'GitSCM', branches: [[name: params.b1]], userRemoteConfigs: [[url: 'https://github.com/ASandelin/Trailrunner.git']]])
                       }
                  }
        }
        stage('Build') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn compile'
                }
            }
        }        
        stage('Test') {
            steps {
                dir('Trailrunner') {
                    bat 'mvn test'
                }
            }
        }
        stage('Post Test') {
            steps {
                            }
        }
        stage('Run Robot') {
            steps {
                            }
        }
    }
}
